{% extends 'base.j2' %}

{% block content %}
{% if driver %}
<div class="card">
    <div class="card-body">
        <h5 class="card-title">{{ driver[0] }}</h5>
        <p class="card-text"><strong>Place:</strong> {{ driver[1] }}</p>
        <p class="card-text"><strong>Time:</strong> {{ driver[2] }}</p>
        <p class="card-text"><strong>Description:</strong> {{ driver[3] }}</p>
        <p class="card-text"><strong>City:</strong> {{ driver[5] }}</p>
    </div>
</div>
{% else %}
<div class="alert alert-warning mt-4" role="alert">
    No driver found.
</div>
{% endif %}
{% endblock %}